@page
@model RazorLogin.Pages.Admin.Reports2.IndexModel
@{
    ViewData["Title"] = "Employee Demographics Report";
}

<h1>Employee Statistics Report</h1>

<form method="get">
    <div>
        <label for="StartDate">Start Date:</label>
        <input type="date" asp-for="StartDate" />
    </div>
    <div>
        <label for="EndDate">End Date:</label>
        <input type="date" asp-for="EndDate" />
    </div>
    <div>
        <input type="checkbox" asp-for="SearchAll" />
        <label asp-for="SearchAll">Search All Employees</label>
    </div>
    <button type="submit">Filter</button>
</form>

<h2>Employee Stats</h2>
<table class="table">
    <thead>
        <tr>
            <th>Degree</th>
            <th>Average Age</th>
            <th>Min Age</th>
            <th>Max Age</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stat in Model.Report.EmployeeStats)
        {
            <tr>
                <td>@stat.Degree</td>
                <td>@stat.AverageAge</td>
                <td>@stat.MinAge</td>
                <td>@stat.MaxAge</td>
                <td>@stat.Count</td>
            </tr>
        }
    </tbody>
</table>

