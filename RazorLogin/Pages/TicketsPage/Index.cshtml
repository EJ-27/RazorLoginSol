@page
@model RazorLogin.Pages.TicketsPage.IndexModel

@{
    ViewData["Title"] = "My Tickets";
}

<div class="container my-5">
    <h1 class="text-center mb-4">My Tickets</h1>

    <div class="text-center mb-4">
        <a asp-page="Create" class="btn btn-primary btn-lg">Purchase Tickets</a>
    </div>

    @if (Model.Tickets != null && Model.Tickets.Any())
    {
        <div class="row">
            @foreach (var item in Model.Tickets)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-light">
                        <div class="card-body">
                            <h5 class="card-title">@item.TicketType</h5>
                            <p class="h4 text-primary">
                                $@Html.DisplayFor(modelItem => item.TicketPrice)
                            </p>
                            <p class="text-muted">
                                <strong>Purchase Date:</strong> @Html.DisplayFor(modelItem => item.TicketPurchaseDate)
                            </p>
                            <div class="d-flex justify-content-between">
                                <a asp-page="./Delete" asp-route-id="@item.TicketId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-times-circle"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            You have no tickets yet. <a asp-page="Create" class="btn btn-primary btn-sm">Purchase Tickets</a>
        </div>
    }
</div>
