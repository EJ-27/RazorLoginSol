@page
@model RazorLogin.Pages.Zook.Deps.IndexModel

@{
    ViewData["Title"] = "My Dependents";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">My Dependents</h2>

    <div class="mb-3 d-flex justify-content-between">
        <a asp-page="./Add" class="btn btn-primary">Add New Dependent</a>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Dependent ID</th>
                <th>Dependent Name</th>
                <th>DOB</th>
                <th>Relationship</th>
                <th>Healthcare Tier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Dependant.Count == 0)
            {
                <tr>
                    <td colspan="6" class="text-center">No dependents found.</td>
                </tr>
            }
            else
            {
                foreach (var dependent in Model.Dependant)
                {
                    <tr>
                        <td>@dependent.DepndantId</td>
                        <td>@dependent.DependentName</td>
                        <td>@dependent.DependentDob?.ToString("yyyy-MM-dd")</td>
                        <td>@dependent.Relationship</td>
                        <td>@dependent.HealthcareTier</td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@dependent.DepndantId" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@dependent.DepndantId" class="btn btn-danger btn-sm me-2">Delete</a>

                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
