@page
@model RazorLogin.Pages.Admin.Personal.IndexModel
@{
}

<h2>Your Information</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Dob</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.EmployeeFirstName</td>
                <td>@employee.EmployeeLastName</td>
                <td>@employee.EmployeeDob</td>
                <td>@employee.EmployeeAddress</td>
                <td>@employee.EmployeeEmail</td>
                <td>@employee.EmployeePhoneNumber</td>
                <td>
                    <a asp-page="./viewPersonal" asp-route-id="@employee.EmployeeId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
