@page
@model RazorLogin.Pages.Zook.Eve.DeleteModel
@{
    ViewData["Title"] = "Delete Event";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Are you sure you want to delete this event?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Event Name</dt>
            <dd class="col-sm-10">@Model.Event.EventName</dd>

            <dt class="col-sm-2">Event Date</dt>
            <dd class="col-sm-10">@Model.Event.EventDate?.ToString("d")</dd>

            <dt class="col-sm-2">Start Time</dt>
            <dd class="col-sm-10">@Model.Event.EventStartTime.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-2">End Time</dt>
            <dd class="col-sm-10">@Model.Event.EventEndTime.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-2">Location</dt>
            <dd class="col-sm-10">@Model.Event.EventLocation</dd>

            <dt class="col-sm-2">Employee Rep</dt>
            <dd class="col-sm-10">@Model.Event.EventEmployeeRep?.EmployeeFirstName @Model.Event.EventEmployeeRep?.EmployeeLastName</dd>
        </dl>
    </div>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
