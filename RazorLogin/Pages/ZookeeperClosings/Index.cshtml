@page
@model RazorLogin.Pages.ZookeeperClosings.IndexModel

@{
    ViewData["Title"] = "Enclosure Closings";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Enclosure Closings</h1>
    <div class="text-center mb-4">
        <a asp-page="Create" class="btn btn-success btn-lg">Create New Closing</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Closing End</th>
                <th>Closing Start</th>
                <th>Closing Reason</th>
                <th>Enclosure ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Closing)
            {
                <tr>
                    <td>@item.ClosingsEnd.ToString("MMM dd, yyyy hh:mm tt")</td>
                    <td>@item.ClosingsStart.ToString("MMM dd, yyyy hh:mm tt")</td>
                    <td>@item.ClosingsReason</td>
                    <td>@item.Enclosure.EnclosureId</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ClosingId" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.ClosingId" class="btn btn-danger btn-sm ms-2">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
