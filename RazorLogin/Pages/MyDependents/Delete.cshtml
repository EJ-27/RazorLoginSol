@page "{id:int}"
@model RazorLogin.Pages.MyDependents.DeleteModel

@{
    ViewData["Title"] = "Delete Dependent";
}

<h1>Delete Dependent</h1>

<hr />

<div>
    <h3>Are you sure you want to delete this dependent?</h3>
    <div>
        <h4>@Model.Dependent.DependentName</h4>
        <p>Relationship: @Model.Dependent.Relationship</p>
        <p>Date of Birth: @Model.Dependent.DependentDob?.ToString("yyyy-MM-dd")</p>
        <p>Healthcare Tier: @Model.Dependent.HealthcareTier</p>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Dependent.DepndantId" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

