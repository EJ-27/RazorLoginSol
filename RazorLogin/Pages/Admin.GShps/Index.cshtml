@page
@model RazorLogin.Pages.Admin.GShps.IndexModel

@{
    ViewData["Title"] = "Gift Shops List";
}

<h1>Gift Shops</h1>


<!-- Instructions / Notes -->
<p>
    In this table, each gift shop will display its manager's name (if one is assigned). If no manager is assigned, it will display "None".
</p>

<!-- Create Shop Button -->
<a class="btn btn-primary mb-3" asp-page="./Create">Create New Shop</a>


<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Gift Shop ID</th>
            <th>Gift Shop Name</th>
            <th>Location</th>
            <th>Open Time</th>
            <th>Close Time</th>
            <th>Manager</th>
            <th>Inventory</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GiftShops)
        {
            <tr>
                <td>@item.ShopId</td>
                <td>@item.GiftShopName</td>
                <td>@item.GiftShopLocation</td>
                <td>@item.GiftShopOpenTime.ToString("hh:mm tt")</td>
                <td>@item.GiftShopCloseTime.ToString("hh:mm tt")</td>
                <td>@item.ManagerName</td> <!-- Display the manager's name (or 'None') -->
                <td>
                    <!-- Link to manage items in this shop -->
                    <a asp-page="/Admin.Ite/Index" asp-route-shopId="@item.ShopId">Manage Items</a>
                </td>
                <td>
                    <!-- Edit and Delete Links -->
                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.ShopId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ShopId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
