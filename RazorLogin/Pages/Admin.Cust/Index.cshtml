@page
@model RazorLogin.Pages.Admin.Cust.IndexModel

@{
    ViewData["Title"] = "Customers";
}

<!-- Page Header -->
<h1 class="text-center my-4">Customer List</h1>

<!-- Instructional Note -->
<div class="mt-3">
    <small class="text-muted">
       Be aware that customer may not have provided all information.
    </small>
</div>

<!-- Add New Customer Button -->
<!--<div class="mt-4 text-center">
    <a asp-page="Create" class="btn btn-primary">Add New Customer</a>
</div>-->

<!-- Customer Table -->
<div class="table-responsive mt-4">
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Customer[0].CustomerId)</th>
                <th>@Html.DisplayNameFor(model => model.Customer[0].CustomerFirstName)</th>
                <th>@Html.DisplayNameFor(model => model.Customer[0].CustomerLastName)</th>
                <th>@Html.DisplayNameFor(model => model.Customer[0].MembershipType)</th>
                <th>@Html.DisplayNameFor(model => model.Customer[0].CustomerEmail)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customer)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.CustomerFirstName))
                        {
                            <text>N/A</text>
                        }
                        else
                        {
                            @item.CustomerFirstName
                        }
                    </td>
                    <td>
                        @if (string.IsNullOrEmpty(item.CustomerLastName))
                        {
                            <text>N/A</text>
                        }
                        else
                        {
                            @item.CustomerLastName
                        }
                    </td>
                    <td>@item.MembershipType</td>
                    <td>@item.CustomerEmail</td>
                    <td>
                        <!-- Edit and Delete Links -->
                        <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.CustomerId">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.CustomerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
