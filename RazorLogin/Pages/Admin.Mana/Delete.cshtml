@page
@model RazorLogin.Pages.Admin.Mana.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this manager?</h3>
<div>
    <h4>Manager Details</h4>

    <!-- Display errors if there are any in ModelState -->
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                {
                        <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }



    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Department)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager.ManagerEmploymentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.ManagerEmploymentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Employee.EmployeeId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Manager.ManagerId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
