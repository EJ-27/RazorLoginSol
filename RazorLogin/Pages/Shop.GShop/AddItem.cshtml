@page
@model RazorLogin.Pages.Shop.GShop.AddItemModel

@{
    ViewData["Title"] = "Add New Item";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Item</h2>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form method="post" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!--<div class="form-group mb-3">
                    <label asp-for="Item.ItemId" class="form-label">Item ID</label>
                    <select asp-for="Item.ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                </div>-->

                <div class="form-group mb-3">
                    <label asp-for="Item.ItemName" class="form-label">Item Name</label>
                    <input asp-for="Item.ItemName" class="form-control" />
                    <span asp-validation-for="Item.ItemName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.ItemCount" class="form-label">Item Count</label>
                    <input asp-for="Item.ItemCount" class="form-control" type="number" />
                    <span asp-validation-for="Item.ItemCount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.RestockDate" class="form-label">Restock Date</label>
                    <input asp-for="Item.RestockDate" class="form-control" type="date" />
                    <span asp-validation-for="Item.RestockDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Item.ShopId" class="form-label">Shop ID</label>
                    <input asp-for="Item.ShopId" class="form-control" type="number" />
                    <span asp-validation-for="Item.ShopId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Add Item</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        max-width: 600px;
    }
</style>