@page
@model RazorLogin.Pages.ManagerInfo.viewPersonalModel

@{
    ViewData["Title"] = "Manager Information";
}

<h1>Manager Information</h1>

<div class="container mt-5 p-4" style="background-color: #e8f5e9; border-radius: 10px;">
    <h4>Employee Details</h4>
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">First Name</dt>
                <dd class="col-sm-8">@Model.Employee.EmployeeFirstName</dd>

                <dt class="col-sm-4">Last Name</dt>
                <dd class="col-sm-8">@Model.Employee.EmployeeLastName</dd>

                <dt class="col-sm-4">Address</dt>
                <dd class="col-sm-8">@Model.Employee.EmployeeAddress</dd>

                <dt class="col-sm-4">Phone Number</dt>
                <dd class="col-sm-8">@Model.Employee.EmployeePhoneNumber</dd>

                <dt class="col-sm-4">Date of Birth</dt>
                <dd class="col-sm-8">@Model.Employee.EmployeeDob</dd>
            </dl>
        </div>
    </div>

    <h4>Manager Details</h4>
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Manager.Department">Department</label>
                    <input asp-for="Manager.Department" class="form-control" />
                    <span asp-validation-for="Manager.Department" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manager.ManagerEmploymentDate">Employment Date</label>
                    <input asp-for="Manager.ManagerEmploymentDate" class="form-control" type="date" />
                    <span asp-validation-for="Manager.ManagerEmploymentDate" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
