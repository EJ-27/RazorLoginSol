@page
@model RazorLogin.Pages.Admin.Cust.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.CustomerId" />
            <div class="form-group">
                <label asp-for="Customer.CustomerFirstName" class="control-label"></label>
                <input asp-for="Customer.CustomerFirstName" class="form-control" />
                <span asp-validation-for="Customer.CustomerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerLastName" class="control-label"></label>
                <input asp-for="Customer.CustomerLastName" class="form-control" />
                <span asp-validation-for="Customer.CustomerLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerDob" class="control-label"></label>
                <input asp-for="Customer.CustomerDob" class="form-control" />
                <span asp-validation-for="Customer.CustomerDob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerAddress" class="control-label"></label>
                <input asp-for="Customer.CustomerAddress" class="form-control" />
                <span asp-validation-for="Customer.CustomerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.MembershipStartDate" class="control-label"></label>
                <input asp-for="Customer.MembershipStartDate" class="form-control" />
                <span asp-validation-for="Customer.MembershipStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.MembershipEndDate" class="control-label"></label>
                <input asp-for="Customer.MembershipEndDate" class="form-control" />
                <span asp-validation-for="Customer.MembershipEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.MembershipType" class="control-label"></label><br />
                <select asp-for="Customer.MembershipType">
                    <option value="FREE TIER">FREE</option>
                    <option value="FAMILY TIER">FAMILY</option>
                    <option value="VIP TIER">VIP</option>
                </select>
                <span asp-validation-for="Customer.MembershipType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerEmail" class="control-label"></label>
                <input asp-for="Customer.CustomerEmail" class="form-control" />
                <span asp-validation-for="Customer.CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
