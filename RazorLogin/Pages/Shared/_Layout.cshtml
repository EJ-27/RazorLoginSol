<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorLogin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorLogin.styles.css" asp-append-version="true" />
</head>
<body>


     <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RazorLogin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                           
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Users/Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Cust/Index">Customers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Emp/Index">Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Mana/Index">Managers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Zook/Index">Zookeepers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Deps/Index">Dependants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.GShps/Index">Stores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.FShps/Index">Dining</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-page="/Admin.Tick/Index">Tickets</a>
                            </li>
                         
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" id="personalDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Account
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="financesDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/MyDependents/Index">My Dependents</a>
                                    </li>
                                  <!--  <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/Admin.Personal/Index">Employee Info</a>
                                    </li>-->
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" id="financesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Reports
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="financesDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/Admin.Reports/Index1">Employee Cost Report</a> 
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/Admin.Reports2/Index">Employee Demographics Report</a>
                                    </li>
                                  
                                </ul>
                            </li>
                        </ul>
                    }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
                {
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Manag.Report/Index">Dining Stores Report</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Manag.Report2/Index">Gift Shops Report</a>
                            </li>
                        </ul>

                }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Shop"))
                {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Shop.Dining1/Index">Food Stores</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Shop.GShop/Index">Gift Shops</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Shop.Eve/Index">Events</a>
                            </li>
                        </ul>
                }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Zookeeper"))
                {


                  
                }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                {   <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/TicketsPage/Index">Tickets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/MembershipPage/Index">Memberships</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/CustomerPage/Index">My Account</a>
                        </li>
                    </ul>


                }


                    <partial name="_LoginPartial" />
                
                </div>
            </div>
        </nav>
    </header> 


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - RazorLogin - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>