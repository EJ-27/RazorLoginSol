@page
@model RazorLogin.Pages.Manag.Inven.DetailsModel
@{
    ViewData["Title"] = "Item Details";
}

<h2>Item Details</h2>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Model.Item.ItemName</dd>

        <dt class="col-sm-2">Item Count</dt>
        <dd class="col-sm-10">@Model.Item.ItemCount</dd>

        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Model.Item.RestockDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Item.ItemId" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>