@page
@model RazorLogin.Pages.Manag.Sho.IndexModel
@{
    ViewData["Title"] = "My Store and Employees";
}

<h2>Assigned Store</h2>

@if (Model.AssignedGiftShop != null)
{
    <h3>Gift Shop: @Model.AssignedGiftShop.GiftShopName</h3>
    <p>Location: @Model.AssignedGiftShop.GiftShopLocation</p>
    <p>Open Time: @Model.AssignedGiftShop.GiftShopOpenTime</p>
    <p>Close Time: @Model.AssignedGiftShop.GiftShopCloseTime</p>
    <a asp-page="./Edit" class="btn btn-primary">Edit</a>
}
else if (Model.AssignedFoodStore != null)
{
    <h3>Food Store: @Model.AssignedFoodStore.FoodStoreName</h3>
    <p>Location: @Model.AssignedFoodStore.FoodStoreLocation</p>
    <p>Open Time: @Model.AssignedFoodStore.FoodStoreOpenTime</p>
    <p>Close Time: @Model.AssignedFoodStore.FoodStoreCloseTime</p>
    <a asp-page="./Edit" class="btn btn-primary">Edit</a>
}
else
{
    <p>No assigned store found for this manager.</p>
}

<h2>Employees Under This Store</h2>
@if (Model.EmployeesUnderManager.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Department</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.EmployeesUnderManager)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.EmployeeFirstName @employee.EmployeeLastName</td>
                    <td>@employee.Department</td>
                    <td>@employee.EmployeeEmail</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found under this store.</p>
}