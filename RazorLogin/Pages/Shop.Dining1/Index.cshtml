@page
@model RazorLogin.Pages.Shop.Dining1.IndexModel

@{
    ViewData["Title"] = "All Food Stores";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">All Food Stores</h1>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.FoodStores[0].FoodStoreName)</th>
                <th>@Html.DisplayNameFor(model => model.FoodStores[0].FoodStoreLocation)</th>
                <th>@Html.DisplayNameFor(model => model.FoodStores[0].FoodStoreOpenTime)</th>
                <th>@Html.DisplayNameFor(model => model.FoodStores[0].FoodStoreCloseTime)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model.FoodStores)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => store.FoodStoreName)</td>
                    <td>@Html.DisplayFor(modelItem => store.FoodStoreLocation)</td>
                    <td>@(store.FoodStoreOpenTime.HasValue ? store.FoodStoreOpenTime.Value.ToString("hh:mm tt") : "N/A")</td>
                    <td>@(store.FoodStoreCloseTime.HasValue ? store.FoodStoreCloseTime.Value.ToString("hh:mm tt") : "N/A")</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@store.FoodStoreId" class="btn btn-primary btn-sm me-2">Details</a>
                        <a asp-page="./Inventory" asp-route-foodStoreId="@store.FoodStoreId" class="btn btn-info btn-sm">View Inventory</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }
    .btn {
        min-width: 100px;
    }
</style>