@page
@model RazorLogin.Pages.Manag.Tick.IndexModel
@{
    ViewData["Title"] = "Tickets";
}

<!-- Container with Light Green Background -->
<div class="container mt-5 p-4" style="background-color: #e8f5e9; border-radius: 10px;">
    <h2 class="text-success">All Tickets</h2>

    <!-- Card Layout for Tickets Table -->
    <div class="card shadow-sm mt-4" style="border-radius: 8px;">
        <div class="card-body">
            @if (Model.Tickets.Any())
            {
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Ticket ID</th>
                            <th>Ticket Type</th>
                            <th>Price</th>
                            <th>Purchase Date</th>
                            <th>Purchase ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td>@ticket.TicketId</td>
                                <td>@ticket.TicketType</td>
                                <td>@ticket.TicketPrice.ToString("C")</td>
                                <td>@ticket.TicketPurchaseDate?.ToString("yyyy-MM-dd")</td>
                                <td>@ticket.PurchaseId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">No tickets found.</p>
            }
        </div>
    </div>
</div>
