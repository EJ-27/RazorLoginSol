@page
@model RazorLogin.Pages.Admin.Emp.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="mb-4">Delete Employee</h1>

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-danger">Are you sure you want to delete this employee?</h3>
        <hr />

        <div class="mt-3">
            <small class="text-muted">
               If this employee is a manager, delete their manager profile first. </br>
                If this employee is a Zookeeper, delete their zookeeper profile first. </br>
                Otherwise, ensure all dependents and events associated with the employee are deleted before deleting emlpoyee.
            </small>
        </div>


        <!-- Employee Details Box -->
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">Employee Information</h4>
                <hr />
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>SSN:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.Ssn)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Name:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.EmployeeFirstName) @Html.DisplayFor(model => model.Employee.EmployeeLastName)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Date of Birth:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.EmployeeDob)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Phone Number:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.EmployeePhoneNumber)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Email:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.EmployeeEmail)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Address:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.EmployeeAddress)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Employment Information Box -->
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">Employment Details</h4>
                <hr />
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>Salary:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.EmployeeSalary)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Date of Employment:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.DateOfEmployment)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Department:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.Department)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Degree:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.Degree)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Workplace Information Box -->
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title">Workplace Information</h4>
                <hr />
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <strong>Food Store:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.FoodStoreId)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Shop:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.ShopId)</p>
                    </div>
                    <div class="col-sm-6">
                        <strong>Supervisor:</strong>
                        <p>@Html.DisplayFor(model => model.Employee.SupervisorId)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Confirmation and Actions -->
        <div class="d-flex justify-content-between mt-4">
            <form method="post">
                <input type="hidden" asp-for="Employee.EmployeeId" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </form>
            <a class="btn btn-secondary" asp-page="./Index">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Optionally include any additional JS, like icons or custom scripts -->
}
