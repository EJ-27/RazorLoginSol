@page
@model RazorLogin.Pages.CustomerShop.MyPurchasesModel

<h1>My Purchases</h1>

<p>
    <a asp-page="./Index" class="btn btn-primary btn-sm">Return to Shop</a>
</p>

@if (Model.Purchases != null && Model.Purchases.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Purchase ID</th>
                <th>Purchase Date</th>
                <th>Purchase Time</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model.Purchases)
            {
                <tr>
                    <td>@purchase.ItemName</td> 
                    <td>@purchase.NumItems</td>
                    <td>@purchase.PurchaseId</td>
                    <td>@purchase.PurchaseDate?.ToString("MM/dd/yyyy")</td>
                    <td>@purchase.PurchaseTime?.ToString("hh:mm:ss")</td>
                    <td>@(purchase.TotalPurchasesPrice?.ToString("C") ?? "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No purchases found.</p>
}
