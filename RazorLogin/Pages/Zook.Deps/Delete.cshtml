@page "{id:int}"
@model RazorLogin.Pages.Shop.Deps.DeleteModel

@{
    ViewData["Title"] = "Delete Dependent";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-danger">Delete Dependent</h2>

    <div class="shadow p-4 rounded bg-light">
        <h3 class="text-center mb-3">Are you sure you want to delete this dependent?</h3>

        <div class="text-center mb-4">
            <h4 class="text-primary">@Model.Dependent.DependentName</h4>
            <p><strong>Relationship:</strong> @Model.Dependent.Relationship</p>
            <p><strong>Date of Birth:</strong> @Model.Dependent.DependentDob?.ToString("yyyy-MM-dd")</p>
            <p><strong>Healthcare Tier:</strong> @Model.Dependent.HealthcareTier</p>
        </div>

        <form method="post" class="text-center">
            <input type="hidden" asp-for="Dependent.DepndantId" />
            <button type="submit" class="btn btn-danger me-2">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>


