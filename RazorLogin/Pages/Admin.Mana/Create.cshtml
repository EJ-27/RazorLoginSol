@page
@model RazorLogin.Pages.Admin.Mana.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Manager</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Manager.ManagerId" class="control-label"></label>
                <input asp-for="Manager.ManagerId" class="form-control" />
                <span asp-validation-for="Manager.ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.EmployeeId" class="control-label"></label>
                <select asp-for="Manager.EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Manager.Department" class="control-label"></label><br />
                <select asp-for="Manager.Department">
                    <option value="GENERAL">GENERAL</option>
                    <option value="FOOD">DINING</option>
                    <option value="SHOP">SHOP</option>
                </select>
                <span asp-validation-for="Manager.Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manager.ManagerEmploymentDate" class="control-label"></label>
                <input asp-for="Manager.ManagerEmploymentDate" class="form-control" type="date" />
                <span asp-validation-for="Manager.ManagerEmploymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
