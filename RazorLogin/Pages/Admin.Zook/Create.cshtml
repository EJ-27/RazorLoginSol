            </div>
            <div class="form-group">
                <label asp-for="Zookeeper.EmployeeId" class="control-label"></label>
                <select asp-for="Zookeeper.EmployeeId" class ="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Zookeeper.NumAssignedCages" class="control-label"></label>
                <input asp-for="Zookeeper.NumAssignedCages" class="form-control" />
                <span asp-validation-for="Zookeeper.NumAssignedCages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zookeeper.TrainingRenewalDate" class="control-label"></label>
