@page
@model RazorLogin.Pages.CustomerPage.IndexModel

@{
    ViewData["Title"] = "My Membership";
}

<h1>My Membership</h1>

@if (Model.Customer != null)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => Model.Customer.MembershipStartDate)</th>
                <th>@Html.DisplayNameFor(model => Model.Customer.MembershipEndDate)</th>
                <th>@Html.DisplayNameFor(model => Model.Customer.MembershipType)</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(modelItem => Model.Customer.MembershipStartDate)</td>
                <td>@Html.DisplayFor(modelItem => Model.Customer.MembershipEndDate)</td>
                <td>@Html.DisplayFor(modelItem => Model.Customer.MembershipType)</td>
                <td>
                    @{
                        var description = Model.Customer.MembershipType switch
                        {
                            "FREE TIER" => "Access to basic features and standard pricing.",
                            "FAMILY TIER" => "Access to select benefits and an additional $2 off ticket prices.",
                            "VIP TIER" => "Exclusive benefits along with an extra $3 off ticket prices.",
                            _ => "No description available"
                        };
                    }
                    @description
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId" class="btn btn-warning btn-sm">Update or Upgrade Membership</a>
                </td>
            </tr>
        </tbody>
    </table>
}
else
{
    <p>No account details found.</p>
}

<h2>Membership Types</h2>
<div>
    <div class="mb-3">
        <h4>Free Tier</h4>
        <p>Access to basic features and standard pricing.</p>
    </div>

    <div class="mb-3">
        <h4>Family Tier</h4>
        <p>Access to select benefits and an additional $2 off ticket prices.</p>
    </div>

    <div class="mb-3">
        <h4>VIP Tier</h4>
        <p>Exclusive benefits along with an extra $3 off ticket prices.</p>
    </div>
</div>
