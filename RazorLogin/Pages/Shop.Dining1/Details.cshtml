@page "{id:int}"
@model RazorLogin.Pages.Shop.Dining1.DetailsModel

@{
    ViewData["Title"] = "Food Store Details";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Food Store Details</h1>

    <div class="card shadow-sm p-4 mb-4 bg-light">
        <h3 class="text-primary">@Model.FoodStore.FoodStoreName</h3>

        <dl class="row mt-3">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.FoodStore.FoodStoreId</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.FoodStore.FoodStoreLocation</dd>

            <dt class="col-sm-3">Opening Time</dt>
            <dd class="col-sm-9">@Model.FoodStore.FoodStoreOpenTime</dd>

            <dt class="col-sm-3">Closing Time</dt>
            <dd class="col-sm-9">@Model.FoodStore.FoodStoreCloseTime</dd>
        </dl>
    </div>

    <h2 class="mb-3">Employees Working at This Store</h2>
    <p>Total Employees: <strong>@Model.Employeecount</strong></p>

    @if (Model.Employee.Count > 0)
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model.Employee)
                {
                    <tr>
                        <td>@employee.EmployeeFirstName @employee.EmployeeLastName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-warning">No employees are currently assigned to this store.</p>
    }

    <div class="mt-4">
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .container {
        max-width: 600px;
    }
</style>