@page
@model RazorLogin.Pages.Admin.Mana.IndexModel

@{
    ViewData["Title"] = "Managers List";
}

<h1>Managers List</h1>

<!-- Instruction Note -->
<div class="mt-3">
    <small class="text-muted">
        To find the Employee ID for a manager, simply take the Manager ID and remove the last 5 digits. Manager profiles are automatically created during employee creation. </br>
        To delete an employee assigned as manager, delete from manager tab, then from employee tab.
    </small>
</div>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Manager ID</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Employment Date</th>
            <th>Assigned Store</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Managers)
        {
            <tr>
                <td>@item.ManagerId</td>
                <td>@item.EmployeeFirstName @item.EmployeeLastName</td>
                <td>@item.Department</td>
                <td>@item.ManagerEmploymentDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.StoreInfo</td>
                <td>
                    <!-- Link to the list of employees under this manager -->
                    <a class="btn btn-info btn-sm" asp-page="/Admin.Mana/EmpList" asp-route-managerId="@item.ManagerId">Employees</a>

                    <!-- Edit and Delete Links -->
                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.ManagerId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ManagerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
