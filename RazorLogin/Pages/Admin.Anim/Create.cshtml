@page
@model RazorLogin.Pages.Admin.Anim.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Animal Name Field -->
            <div class="form-group mb-3">
                <label asp-for="Animal.AnimalName" class="control-label"></label>
                <input asp-for="Animal.AnimalName" class="form-control" />
                <span asp-validation-for="Animal.AnimalName" class="text-danger"></span>
            </div>

            <!-- Species Field -->
            <div class="form-group mb-3">
                <label asp-for="Animal.Species" class="control-label"></label>
                <input asp-for="Animal.Species" class="form-control" />
                <span asp-validation-for="Animal.Species" class="text-danger"></span>
            </div>

            <!-- Animal Sex Field -->
            <div class="form-group mb-3">
                <label asp-for="Animal.AnimalSex" class="control-label">Animal Sex</label>
                <select asp-for="Animal.AnimalSex" class="form-control">
                    <option value="">Select Sex</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
                <span asp-validation-for="Animal.AnimalSex" class="text-danger"></span>
            </div>

            <!-- Date of Birth Field -->
            <div class="form-group mb-3">
                <label asp-for="Animal.AnimalDob" class="control-label">Date of Birth</label>
                <input asp-for="Animal.AnimalDob" class="form-control" type="date" />
                <span asp-validation-for="Animal.AnimalDob" class="text-danger"></span>
            </div>

            <!-- Arrival Date Field -->
            <div class="form-group mb-3">
                <label asp-for="Animal.ArrivalDate" class="control-label">Arrival Date</label>
                <input asp-for="Animal.ArrivalDate" class="form-control" type="date" />
                <span asp-validation-for="Animal.ArrivalDate" class="text-danger"></span>
            </div>

            <!-- Weight Field -->
            <div class="form-group">
                <label asp-for="Animal.Weight" class="control-label"></label>
                <input asp-for="Animal.Weight" class="form-control" />
                <span asp-validation-for="Animal.Weight" class="text-danger"></span>
            </div>

            <!-- Enclosure Dropdown -->
            <div class="form-group">
                <label asp-for="Animal.EnclosureId" class="control-label"></label>
                <select asp-for="Animal.EnclosureId" class="form-control" asp-items="ViewBag.EnclosureId"></select>
            </div>

            <!-- Zookeeper Dropdown -->
            <div class="form-group">
                <label asp-for="Animal.ZookeeperId" class="control-label"></label>
                <select asp-for="Animal.ZookeeperId" class="form-control" asp-items="ViewBag.ZookeeperId"></select>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
