@page
@model RazorLogin.Pages.Zook.Encl.CreateModel

@{
    ViewData["Title"] = "Create Enclosure";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Create Enclosure</h2>

    <form method="post" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureId" class="form-label">Enclosure ID</label>
            <input asp-for="Enclosure.EnclosureId" class="form-control" />
            <span asp-validation-for="Enclosure.EnclosureId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureName" class="form-label">Enclosure Name</label>
            <input asp-for="Enclosure.EnclosureName" class="form-control" />
            <span asp-validation-for="Enclosure.EnclosureName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureDepartment" class="form-label">Department</label>
            <input asp-for="Enclosure.EnclosureDepartment" class="form-control" />
            <span asp-validation-for="Enclosure.EnclosureDepartment" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureOpenTime" class="form-label">Open Time</label>
            <input asp-for="Enclosure.EnclosureOpenTime" class="form-control" type="time" />
            <span asp-validation-for="Enclosure.EnclosureOpenTime" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureCloseTime" class="form-label">Close Time</label>
            <input asp-for="Enclosure.EnclosureCloseTime" class="form-control" type="time" />
            <span asp-validation-for="Enclosure.EnclosureCloseTime" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureCleaningTime" class="form-label">Cleaning Time</label>
            <input asp-for="Enclosure.EnclosureCleaningTime" class="form-control" type="time" />
            <span asp-validation-for="Enclosure.EnclosureCleaningTime" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.EnclosureFeedingTime" class="form-label">Feeding Time</label>
            <input asp-for="Enclosure.EnclosureFeedingTime" class="form-control" type="time" />
            <span asp-validation-for="Enclosure.EnclosureFeedingTime" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.ZookeeperId" class="form-label">Zookeeper</label>
            <select asp-for="Enclosure.ZookeeperId" class="form-control" asp-items="ViewData[" ZookeeperId"]">
                <option value="">-- Select a Zookeeper --</option>
            </select>
            <span asp-validation-for="Enclosure.ZookeeperId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.OccupancyStatus" class="form-label">Occupancy Status</label>
            <input asp-for="Enclosure.OccupancyStatus" class="form-control" />
            <span asp-validation-for="Enclosure.OccupancyStatus" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.Animals" class="form-label">Animals</label>
            <input asp-for="Enclosure.Animals" class="form-control" />
            <span asp-validation-for="Enclosure.Animals" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Enclosure.Closings" class="form-label">Closings</label>
            <input asp-for="Enclosure.Closings" class="form-control" />
            <span asp-validation-for="Enclosure.Closings" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Create</button>
    </form>
</div>

<div class="mt-4">
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
