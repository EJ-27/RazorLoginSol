@page
@model RazorLogin.Pages.TicketsPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Tickets</h1>

<p>
    <a asp-page="Create">Purchase Tickets</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tickets[0].TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets[0].TicketPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets[0].TicketPurchaseDate)
            </th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @if (Model.Tickets != null && Model.Tickets.Any())
        {
            foreach (var item in Model.Tickets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketPurchaseDate)
                    </td>
                    <td>
                        <a asp-page="./Delete" asp-route-id="@item.TicketId">Cancel Ticket</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No tickets found.</td>
            </tr>
        }
    </tbody>
</table>
