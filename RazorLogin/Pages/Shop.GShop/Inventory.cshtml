@page "{shopId:int}"
@model RazorLogin.Pages.Shop.GShop.InventoryModel

@{
    ViewData["Title"] = "Gift Shop Inventory";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Gift Shop Inventory</h1>

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-warning" role="alert">
            No items available for this store.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Item ID</th>
                    <th>Item Name</th>
                    <th>Item Count</th>
                    <th>Restock Date</th>
                    <th>Item Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.ItemId</td>
                        <td>@item.ItemName</td>
                        <td>@item.ItemCount</td>
                        <td>@item.RestockDate.ToString("MM/dd/yyyy")</td>
                        <td>@item.ItemPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <div class="mt-4">
        <a asp-page="./Index" class="btn btn-secondary">Back to All Gift Shops</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .btn {
        min-width: 80px;
    }
</style>