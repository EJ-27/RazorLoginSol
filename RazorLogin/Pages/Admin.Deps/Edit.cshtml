@page
@model RazorLogin.Pages.Admin.Deps.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Dependant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dependant.DepndantId" />
            <div class="form-group">
                <label asp-for="Dependant.EmployeeId" class="control-label"></label>
                <select asp-for="Dependant.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="Dependant.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependant.DependentName" class="control-label"></label>
                <input asp-for="Dependant.DependentName" class="form-control" />
                <span asp-validation-for="Dependant.DependentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dependant.DependentDob" class="control-label">Date of Birth</label>
                <input asp-for="Dependant.DependentDob" class="form-control" type="date" />
                <span asp-validation-for="Dependant.DependentDob" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dependant.Relationship" class="control-label"></label>
                <input asp-for="Dependant.Relationship" class="form-control" />
                <span asp-validation-for="Dependant.Relationship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependant.HealthcareTier" class="control-label"></label>
                <input asp-for="Dependant.HealthcareTier" class="form-control" />
                <span asp-validation-for="Dependant.HealthcareTier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
