@page "{id:int}"
@model RazorLogin.Pages.Zook.Deps.EditModel

@{
    ViewData["Title"] = "Edit Dependent";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Dependent</h2>

    <form method="post" class="shadow p-4 rounded bg-light">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Dependent.DepndantId" class="control-label fw-bold">Dependent ID</label>
            <input asp-for="Dependent.DepndantId" class="form-control" readonly />
            <span asp-validation-for="Dependent.DepndantId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Dependent.DependentName" class="control-label fw-bold">Dependent Name</label>
            <input asp-for="Dependent.DependentName" class="form-control" />
            <span asp-validation-for="Dependent.DependentName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Dependent.DependentDob" class="control-label fw-bold">Date of Birth</label>
            <input asp-for="Dependent.DependentDob" class="form-control" type="date" />
            <span asp-validation-for="Dependent.DependentDob" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Dependent.Relationship" class="control-label fw-bold">Relationship</label>
            <input asp-for="Dependent.Relationship" class="form-control" />
            <span asp-validation-for="Dependent.Relationship" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Dependent.HealthcareTier" class="control-label fw-bold">Healthcare Tier</label>
            <select asp-for="Dependent.HealthcareTier" class="form-control">
                <option value="">Select Healthcare Tier</option>
                <option value="Tier 1">Tier 1</option>
                <option value="Tier 2">Tier 2</option>
                <option value="Tier 3">Tier 3</option>
            </select>
            <span asp-validation-for="Dependent.HealthcareTier" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Update Dependent</button>
            <a asp-page="./Index" class="btn btn-secondary ms-2">Back to My Dependents</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
