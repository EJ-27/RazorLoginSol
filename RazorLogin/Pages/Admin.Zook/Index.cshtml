@page
@model RazorLogin.Pages.Admin.Zook.IndexModel

@{
    ViewData["Title"] = "Zookeepers List";
}

<h1>Zookeepers List</h1>



<!-- Instruction Note -->
<div class="mt-3">
    <small class="text-muted">
        To find the Employee ID for a zookeeper, simply take the Zookeeper ID and remove the last 5 digits.
    </small>
</div>

<!-- Zookeepers Table -->
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Zookeeper ID</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Last Training Date</th>
            <th>Training Renewal Date</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Zookeepers)
        {
            <tr>
                <td>@item.ZookeeperId</td>
                <td>@item.EmployeeFirstName @item.EmployeeLastName</td>
                <td>@item.AssignedDepartment</td>
                <td>
                    <!-- If LastTrainingDate is null, display 'none' -->
                    @if (string.IsNullOrEmpty(item.LastTrainingDate))
                    {
                        <span>none</span>
                    }
                    else
                    {
                        <span>@item.LastTrainingDate</span>
                    }
                </td>
                <td>@item.TrainingRenewalDate</td>
                <td>
                    <!-- Edit and Delete Links -->
                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.ZookeeperId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ZookeeperId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
