@page
@model RazorLogin.Pages.CustomerShop.MyPurchasesModel

<h1>My Purchases</h1>

@if (Model.Purchases != null && Model.Purchases.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Purchase ID</th>
                <th>Quantity</th>
                <th>Purchase Date</th>
                <th>Purchase Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model.Purchases)
            {
                <tr>
                    <td>@purchase.PurchaseId</td>
                    <td>@purchase.NumItems</td>
                    <td>@purchase.PurchaseDate?.ToString("MM/dd/yyyy")</td>
                    <td>@purchase.PurchaseTime?.ToString("hh:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No purchases found.</p>
}
