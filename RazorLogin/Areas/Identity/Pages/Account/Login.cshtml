@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-image: url('https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fupload.wikimedia.org%2Fwikipedia%2Fcommons%2F2%2F2c%2FGiraffes_-_Pittsburgh_Zoo_-_DSC02615.JPG&f=1&nofb=1&ipt=1677d16f0069cccf73e66d361d6f350a4470fbd29902fd7907c83ab68933acfd&ipo=images'); 
        background-size: cover;
        background-position: center;
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.9); 
        border-radius: 8px;
        padding: 40px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        margin: auto;
        margin-top: 100px; 
    }

    .login-header {
        font-size: 2rem;
        color: white;
        text-align: center;
        margin-bottom: 20px;
        background-color: #004d00; 
        padding: 10px; 
        border-radius: 5px; 
    }

    .form-control {
        border-radius: 5px;
        border: 2px solid #004d00; 
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .btn-primary {
        background-color: #004d00; 
        border-color: #004d00;
    }

    .btn-primary:hover {
        background-color: #003300;
        border-color: #003300;
    }

    .footer-links {
        text-align: center;
        margin-top: 20px;
    }

    .footer-links a {
        color: #004d00;
        text-decoration: none;
    }

    .footer-links a:hover {
        text-decoration: underline;
    }
</style>

<h1 class="login-header">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-4">
        <section class="login-container">
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" required />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" required />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember Me</label>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>

                <div class="footer-links">
                    <p>
                        <!-- <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a> -->
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <!--  <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> -->
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

