@page
@model RazorLogin.Pages.ZookeeperClosings.CreateModel

@{
    ViewData["Title"] = "Create Closing";
}

<div class="container my-5">
    <h1 class="text-center mb-4">Create New Closing</h1>

    <h4 class="text-muted text-center mb-4">Enter the details for the new enclosure closing</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="form-group mb-3">
                    <label asp-for="Closing.ClosingsEnd" class="form-label fw-bold">Closing End</label>
                    <input asp-for="Closing.ClosingsEnd" class="form-control" placeholder="End Date" />
                    <span asp-validation-for="Closing.ClosingsEnd" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Closing.ClosingsStart" class="form-label fw-bold">Closing Start</label>
                    <input asp-for="Closing.ClosingsStart" class="form-control" placeholder="Start Date" />
                    <span asp-validation-for="Closing.ClosingsStart" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Closing.ClosingsReason" class="form-label fw-bold">Closing Reason</label>
                    <input asp-for="Closing.ClosingsReason" class="form-control" placeholder="Enter Reason for Closure" />
                    <span asp-validation-for="Closing.ClosingsReason" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Closing.EnclosureId" class="form-label fw-bold">Enclosure</label>
                    <select asp-for="Closing.EnclosureId" class="form-control" asp-items="Model.EnclosureOptions">
                        <option value="">Select Enclosure</option>
                    </select>
                    <span asp-validation-for="Closing.EnclosureId" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Create Closing</button>
                </div>
            </form>

            <div class="text-center mt-4">
                <a asp-page="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
