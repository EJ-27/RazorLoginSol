@page
@model RazorLogin.Pages.Admin.Clos.IndexModel

@{
    ViewData["Title"] = "Enclosure Closings";
}

<h1>Enclosure Closings</h1>

<!-- Instruction Note -->
<div class="mt-3">
    <small class="text-muted">
        This page displays all the enclosure closing events. You can view the start and end times, reasons for closure, and the associated enclosure.
    </small>
</div>

<!-- Table with Closures -->
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Closing ID</th>
           
            <th>Enclosure</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Closing)
        {
            <tr>
                <td>@item.ClosingId</td>
           
                <td>@item.Enclosure?.EnclosureId </td> <!-- Display enclosure ID or message if null -->

                <td>
                    <!-- Edit and Delete Links -->
                    <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@item.ClosingId">Edit</a> |
                    <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.ClosingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a class="btn btn-success" asp-page="Create">Create New Closing</a>
</p>
