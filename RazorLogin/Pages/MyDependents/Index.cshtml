@page
@model RazorLogin.Pages.MyDependents.IndexModel

@{
    ViewData["Title"] = "My Dependents";
}

<h1>My Dependents</h1>

<hr />

<!-- Add New Dependent Button -->
<div>
    <a asp-page="./Create" class="btn btn-primary">Add New Dependent</a>
</div>


<!-- Dependents Table -->
<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Dependent ID</th>
            <th>Dependent Name</th>
            <th>Date of Birth</th>
            <th>Relationship</th>
            <th>Healthcare Tier</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Check if no dependents exist -->
        @if (Model.Dependant.Count == 0)
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No dependents found. Please add a dependent.</td>
            </tr>
        }
        else
        {
            <!-- Iterate through and display each dependent -->
            @foreach (var dependent in Model.Dependant)
            {
                <tr>
                    <td>@dependent.DepndantId</td>
                    <td>@dependent.DependentName</td>
                    <td>@dependent.DependentDob?.ToString("yyyy-MM-dd")</td>
                    <td>@dependent.Relationship</td>
                    <td>@dependent.HealthcareTier</td>
                    <td>
                        <!-- Edit and Delete Actions -->
                        <a class="btn btn-warning btn-sm" asp-page="./Edit" asp-route-id="@dependent.DepndantId">Edit</a> |
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@dependent.DepndantId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Back to Profile Link -->
<div>
    <a class="btn btn-secondary" asp-page="./Index">Back to Profile</a>
</div>
