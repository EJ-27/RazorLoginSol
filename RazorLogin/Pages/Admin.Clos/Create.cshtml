@page
@model RazorLogin.Pages.Admin.Clos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Closing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

           
            <div class="form-group mb-3">
                <label asp-for="Closing.ClosingsStart" class="form-label fw-bold">Closing Start</label>
                <input asp-for="Closing.ClosingsStart" class="form-control" placeholder="Start Date" />
                <span asp-validation-for="Closing.ClosingsStart" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Closing.ClosingsEnd" class="form-label fw-bold">Closing End</label>
                <input asp-for="Closing.ClosingsEnd" class="form-control" placeholder="End Date" />
                <span asp-validation-for="Closing.ClosingsEnd" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Closing.ClosingsReason" class="form-label fw-bold">Closing Reason</label>
                <input asp-for="Closing.ClosingsReason" class="form-control" placeholder="Enter Reason for Closure" />
                <span asp-validation-for="Closing.ClosingsReason" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="Closing.EnclosureId" class="control-label"></label>
                <select asp-for="Closing.EnclosureId" class ="form-control" asp-items="ViewBag.EnclosureId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
