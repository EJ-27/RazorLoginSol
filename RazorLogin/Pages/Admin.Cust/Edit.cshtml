@page
@model RazorLogin.Pages.Admin.Cust.EditModel

@{
    ViewData["Title"] = "Edit Customer";
}

<h1>Edit Customer</h1>

<h4>Customer Information</h4>
<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden Customer ID -->
            <input type="hidden" asp-for="Customer.CustomerId" />

            <!-- First Name -->
            <div class="form-group row">
                <label asp-for="Customer.CustomerFirstName" class="col-sm-3 col-form-label">First Name</label>
                <div class="col-sm-9">
                    <input asp-for="Customer.CustomerFirstName" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="Customer.CustomerFirstName" class="text-danger"></span>
                </div>
            </div>

            <!-- Last Name -->
            <div class="form-group row">
                <label asp-for="Customer.CustomerLastName" class="col-sm-3 col-form-label">Last Name</label>
                <div class="col-sm-9">
                    <input asp-for="Customer.CustomerLastName" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="Customer.CustomerLastName" class="text-danger"></span>
                </div>
            </div>

            <!-- Date of Birth -->
            <div class="form-group row">
                <label asp-for="Customer.CustomerDob" class="col-sm-3 col-form-label">Date of Birth</label>
                <div class="col-sm-9">
                    <input asp-for="Customer.CustomerDob" type="date" class="form-control" />
                    <span asp-validation-for="Customer.CustomerDob" class="text-danger"></span>
                </div>
            </div>

            <!-- Address -->
            <div class="form-group row">
                <label asp-for="Customer.CustomerAddress" class="col-sm-3 col-form-label">Address</label>
                <div class="col-sm-9">
                    <input asp-for="Customer.CustomerAddress" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Customer.CustomerAddress" class="text-danger"></span>
                </div>
            </div>

            <!-- Membership Start Date -->
            <div class="form-group row">
                <label asp-for="Customer.MembershipStartDate" class="col-sm-3 col-form-label">Membership Start Date</label>
                <div class="col-sm-9">
                    <input asp-for="Customer.MembershipStartDate" type="date" class="form-control" />
                    <span asp-validation-for="Customer.MembershipStartDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Membership End Date -->
            <div class="form-group row">
                <label asp-for="Customer.MembershipEndDate" class="col-sm-3 col-form-label">Membership End Date</label>
                <div class="col-sm-9">
                    <input asp-for="Customer.MembershipEndDate" type="date" class="form-control" />
                    <span asp-validation-for="Customer.MembershipEndDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Membership Type -->
            <div class="form-group row">
                <label asp-for="Customer.MembershipType" class="col-sm-3 col-form-label">Membership Type</label>
                <div class="col-sm-9">
                    <select asp-for="Customer.MembershipType" class="form-control">
                        <option value="FREE TIER">Free Tier</option>
                        <option value="FAMILY TIER">Family Tier</option>
                        <option value="VIP TIER">VIP Tier</option>
                    </select>
                    <span asp-validation-for="Customer.MembershipType" class="text-danger"></span>
                </div>
            </div>

            <!-- Email (Readonly but included in form submission) -->
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Email</label>
                <div class="col-sm-9">
                    <!-- Readonly Email Field -->
                    <input type="text" class="form-control" value="@Model.Customer.CustomerEmail" readonly />

                    <!-- Hidden Email Field to ensure it's submitted -->
                    <input type="hidden" asp-for="Customer.CustomerEmail" value="@Model.Customer.CustomerEmail" />
                    <span asp-validation-for="Customer.CustomerEmail" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
