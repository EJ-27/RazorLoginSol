@page
@model RazorLogin.Pages.CustomerPage.IndexModel

@{
    ViewData["Title"] = "Account Details";
}

<div class="container mt-4">
    <h1 class="mb-4" style="font-size: 2rem; font-weight: 600;">Account Details</h1>

    @if (Model.Customer != null)
    {
        <table class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>@("First Name")</th>
                    <th>@("Last Name")</th>
                    <th>@("Date of Birth")</th>
                    <th>@("Address")</th>
                    <th>@("Email")</th>
                    <th>@("Membership Start Date")</th>
                    <th>@("Membership End Date")</th>
                    <th>@("Membership Type")</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.CustomerFirstName)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.CustomerLastName)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.CustomerDob)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.CustomerAddress)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.CustomerEmail)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.MembershipStartDate)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.MembershipEndDate)</td>
                    <td>@Html.DisplayFor(modelItem => Model.Customer.MembershipType)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId" class="btn btn-primary btn-sm">Edit</a>
                    </td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3" role="alert">
            No account details found. Please check your login or create an account.
        </div>
    }
</div>

<style>
    .table th, .table td {
        padding: 12px 15px; 
    }

    .table th, .table td {
        white-space: nowrap; 
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>