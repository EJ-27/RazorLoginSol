@page
@model RazorLogin.Pages.Manag.Inven.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

<h2>Delete Item</h2>

<p>Are you sure you want to delete this item?</p>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Model.Item.ItemName</dd>

        <dt class="col-sm-2">Item Count</dt>
        <dd class="col-sm-10">@Model.Item.ItemCount</dd>

        <dt class="col-sm-2">Restock Date</dt>
        <dd class="col-sm-10">@Model.Item.RestockDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Item.ItemId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>