@page
@model RazorLogin.Pages.Admin.Tick.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.TicketId" />
            <div class="form-group">
                <label asp-for="Ticket.TicketType" class="control-label"></label>
                <input asp-for="Ticket.TicketType" class="form-control" />
                <span asp-validation-for="Ticket.TicketType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketPrice" class="control-label"></label>
                <input asp-for="Ticket.TicketPrice" class="form-control" />
                <span asp-validation-for="Ticket.TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketPurchaseDate" class="control-label"></label>
                <input asp-for="Ticket.TicketPurchaseDate" class="form-control" />
                <span asp-validation-for="Ticket.TicketPurchaseDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Ticket.PurchaseId" class="control-label"></label>
                <select asp-for="Ticket.PurchaseId" class="form-control" asp-items="ViewBag.PurchaseId"></select>
                <span asp-validation-for="Ticket.PurchaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
