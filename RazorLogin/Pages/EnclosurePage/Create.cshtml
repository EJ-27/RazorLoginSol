@page
@model RazorLogin.Pages.EnclosurePage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enclosure</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Enclosure.EnclosureId" class="control-label"></label>
                <input asp-for="Enclosure.EnclosureId" class="form-control" />
                <span asp-validation-for="Enclosure.EnclosureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enclosure.EnclosureOpenTime" class="control-label"></label>
                <input asp-for="Enclosure.EnclosureOpenTime" class="form-control" />
                <span asp-validation-for="Enclosure.EnclosureOpenTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enclosure.EnclosureCloseTime" class="control-label"></label>
                <input asp-for="Enclosure.EnclosureCloseTime" class="form-control" />
                <span asp-validation-for="Enclosure.EnclosureCloseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enclosure.EnclosureCleaningTime" class="control-label"></label>
                <input asp-for="Enclosure.EnclosureCleaningTime" class="form-control" />
                <span asp-validation-for="Enclosure.EnclosureCleaningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enclosure.EnclosureFeedingTime" class="control-label"></label>
                <input asp-for="Enclosure.EnclosureFeedingTime" class="form-control" />
                <span asp-validation-for="Enclosure.EnclosureFeedingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enclosure.ZookeeperId" class="control-label">Zookeeper</label>
                <select asp-for="Enclosure.ZookeeperId" class="form-control" asp-items="@(ViewData["ZookeeperId"] as SelectList)">
                    <option value="">-- Select a Zookeeper --</option>
                </select>
                <span asp-validation-for="Enclosure.ZookeeperId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
