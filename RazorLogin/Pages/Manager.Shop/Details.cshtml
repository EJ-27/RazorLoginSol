@page
@model RazorLogin.Pages.Manager.Shop.DetailsModel
@section Scripts {

}
@{
    ViewData["Title"] = "Shop Details";
}

<h1>Shop Details</h1>

<div>
    <h4>Gift Shop</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Shop ID</dt>
        <dd class="col-sm-10">@Model.GiftShop.ShopId</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GiftShop.GiftShopName)</dd>
        <dt class="col-sm-2">Open Time</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GiftShop.GiftShopOpenTime)</dd>
        <dt class="col-sm-2">Close Time</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GiftShop.GiftShopCloseTime)</dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.GiftShop.ShopId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
